<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence 
			 					 http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">

	<persistence-unit name="ru.ventra.recruitment" transaction-type="RESOURCE_LOCAL">
		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
		<!-- <jta-data-source>H2TempDB</jta-data-source> -->
		<class>ru.ventra.recruitment.domain.Attachment</class>
		<class>ru.ventra.recruitment.domain.AttachmentData</class>
		<class>ru.ventra.recruitment.domain.Candidate</class>
		<class>ru.ventra.recruitment.domain.ProfessionalField</class>
		<class>ru.ventra.recruitment.domain.Role</class>
		<class>ru.ventra.recruitment.domain.User</class>		
		<exclude-unlisted-classes>false</exclude-unlisted-classes>
		<properties>
			<property name="eclipselink.target-database" value="org.eclipse.persistence.platform.database.H2Platform" />
			<property name="eclipselink.logging.level" value="WARNING" />
			<property name="eclipselink.logging.level.sql" value="FINE" />
			<property name="eclipselink.logging.parameters" value="true" />
			<property name="eclipselink.jdbc.uppercase-columns" value="false" />
			
			<property name="eclipselink.logging.timestamp" value="false" />
			<property name="eclipselink.logging.thread" value="false" />
			<property name="eclipselink.logging.session" value="false" />
			<property name="eclipselink.logging.exceptions" value="false" />
			<property name="eclipselink.logging.connection" value="false" />
		</properties>
	</persistence-unit>
</persistence>
